<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:clipToPadding="false"
    android:contentDescription="For more visit www.materialuiux.com"
    tools:context="classy.SignUpActivity"
    tools:ignore="HardcodedText">

    <fontsUI.cairoTextView
        android:id="@+id/id_SignIn_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="76dp"
        android:contentDescription="For more visit www.materialuiux.com"
        android:text="@string/sign_in"
        android:textColor="@color/signupsignintextcolor"
        android:textSize="@dimen/textsize_28"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <!-- Sign In Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_SignUP_TextView"
        android:layout_below="@+id/id_SignIn_TextView"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rect"
        android:contentDescription="For more visit www.materialuiux.com"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_Email_textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="@dimen/marign_23"
            android:layout_marginTop="@dimen/marign_33"
            android:layout_marginRight="@dimen/marign_23"
            android:background="@null"
            android:contentDescription="For more visit www.materialuiux.com"
            tools:ignore="HardcodedText">

            <fontsUI.cairoEditText
                android:id="@+id/id_email_EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/email"
                android:textColor="@color/primarytext"
                android:textSize="@dimen/textsize_18"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/id_view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/marign_23"
            android:layout_marginTop="@dimen/marign_2"
            android:layout_marginRight="@dimen/marign_23"
            android:background="@color/linecolor"
            android:contentDescription="For more visit www.materialuiux.com" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/id_Password_textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_marginLeft="@dimen/marign_23"
            android:layout_marginTop="@dimen/marign_4"
            android:layout_marginRight="@dimen/marign_23"
            android:background="@null"
            android:contentDescription="For more visit www.materialuiux.com">

            <fontsUI.cairoEditText
                android:id="@+id/id_password_EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/primarytext"
                android:textSize="@dimen/textsize_18"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/id_view_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/marign_23"
            android:layout_marginTop="@dimen/marign_2"
            android:layout_marginRight="@dimen/marign_23"
            android:background="@color/linecolor"
            android:contentDescription="For more visit www.materialuiux.com" />

        <fontsUI.cairoTextView
            android:id="@+id/id_forgetPassword_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/marign_8"
            android:layout_marginLeft="@dimen/marign_8"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="@dimen/marign_4"
            android:contentDescription="For more visit www.materialuiux.com"
            android:text="@string/forgot_password"
            android:textColor="@color/secondarytext"
            android:textSize="@dimen/textsize_18"
            tools:ignore="RtlHardcoded" />

        <fontsUI.cairoButton
            android:id="@+id/id_signIn_Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_36"
            android:layout_marginLeft="@dimen/marign_23"
            android:layout_marginTop="@dimen/marign_16"
            android:layout_marginRight="@dimen/marign_23"
            android:background="@drawable/rectsignin"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/thirdtext"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <fontsUI.cairoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign_26"
            android:contentDescription="For more visit www.materialuiux.com"
            android:text="@string/orsigninusing"
            android:textColor="@color/secondarytext"
            android:textSize="@dimen/textsize_14"
            tools:ignore="TextContrastCheck" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marign_8"
            android:contentDescription="For more visit www.materialuiux.com"
            android:padding="@dimen/padding_16">

            <Button
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:layout_marginLeft="@dimen/marign_22"
                android:layout_marginTop="@dimen/marign_4"
                android:layout_marginRight="@dimen/marign_22"
                android:layout_marginBottom="@dimen/marign_22"
                android:background="@drawable/ic_facebook_background"
                android:contentDescription="For more visit www.materialuiux.com"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:layout_marginLeft="@dimen/marign_22"
                android:layout_marginTop="@dimen/marign_4"
                android:layout_marginEnd="@dimen/marign_22"
                android:layout_marginRight="@dimen/marign_22"
                android:layout_marginBottom="@dimen/marign_22"
                android:background="@drawable/ic_google_background"
                android:contentDescription="For more visit www.materialuiux.com"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:layout_marginLeft="@dimen/marign_22"
                android:layout_marginTop="@dimen/marign_4"
                android:layout_marginEnd="@dimen/marign_22"
                android:layout_marginRight="@dimen/marign_22"
                android:layout_marginBottom="@dimen/marign_22"
                android:background="@drawable/ic_twitter_background"
                android:contentDescription="For more visit www.materialuiux.com"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sign up  -->
    <fontsUI.cairoTextView
        android:id="@+id/id_SignUP_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="18dp"
        android:contentDescription="For more visit www.materialuiux.com"
        android:text="@string/sign_up"
        android:textColor="@color/signupsignintextcolor"
        android:textSize="@dimen/textsize_18"
        android:textStyle="bold" />

</RelativeLayout>