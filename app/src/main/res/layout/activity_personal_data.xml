<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.PersonalDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_firstName"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Vorname"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_lastName"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Nachname"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Geburtsdatum"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_street"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Strasse"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_houseNumber"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Hausnummer"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_plz"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="PLZ"
            android:textAppearance="@style/editText" />

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Stadt"
            android:textAppearance="@style/editText" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>